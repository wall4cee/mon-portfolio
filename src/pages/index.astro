---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
---

<BaseLayout title="Accueil - Mon Portfolio">
  <Navbar />
  
  <main class="min-h-screen bg-gradient-to-br from-gray-900 via-black to-gray-900 flex items-center justify-center px-4 py-12">
    <div class="max-w-7xl w-full">
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        
        <!-- Colonne gauche : Contenu texte -->
        <div class="space-y-8">
          
          <!-- Titre principal -->
          <div class="space-y-4">
            <h1 class="text-5xl lg:text-6xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-400 via-cyan-500 to-blue-600 leading-tight">
              Welcome to my portfolio!
            </h1>
            <div class="h-1 w-32 bg-gradient-to-r from-green-400 to-cyan-500 rounded-full"></div>
          </div>

          <!-- Whoami -->
          <div class="group bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-green-500/30 rounded-2xl p-6 hover:border-green-500/60 transition-all duration-300 hover:shadow-xl hover:shadow-green-500/20">
            <div class="flex items-start gap-3">
              <div class="w-10 h-10 bg-green-500/20 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <div>
                <p class="text-green-400 font-mono font-semibold mb-2">$ whoami</p>
                <p class="text-gray-300 text-lg leading-relaxed">
                  I'm <span class="text-white font-bold">j3dus0r</span>, a cyber-student passionate about <span class="text-red-400 font-semibold">RedTeam</span>. I'm also Junior Web Penetration Tester & CTF Player.
                </p>
              </div>
            </div>
          </div>

          <!-- Email -->
          <div class="group bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-cyan-500/30 rounded-2xl p-6 hover:border-cyan-500/60 transition-all duration-300 hover:shadow-xl hover:shadow-cyan-500/20">
            <div class="flex items-start gap-3">
              <div class="w-10 h-10 bg-cyan-500/20 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-6 h-6 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <p class="text-cyan-400 font-mono font-semibold mb-2">$ cat mail.txt</p>
                <a href="mailto:pro.reset222@passfwd.com" class="text-white text-lg hover:text-cyan-400 transition-colors font-mono">
                  pro.reset222@passfwd.com
                </a>
              </div>
            </div>
          </div>

          <!-- Skills -->
          <div class="group bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-purple-500/30 rounded-2xl p-6 hover:border-purple-500/60 transition-all duration-300 hover:shadow-xl hover:shadow-purple-500/20">
            <div class="flex items-start gap-3">
              <div class="w-10 h-10 bg-purple-500/20 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
              <div class="flex-1">
                <p class="text-purple-400 font-mono font-semibold mb-4">$ ls /about.me</p>
                <div class="flex flex-wrap gap-3">
                  <span class="px-4 py-2 bg-red-500/20 text-red-400 rounded-full text-sm font-semibold border border-red-500/30 hover:bg-red-500/30 transition-colors">
                    Offensive
                  </span>
                  <span class="px-4 py-2 bg-orange-500/20 text-orange-400 rounded-full text-sm font-semibold border border-orange-500/30 hover:bg-orange-500/30 transition-colors">
                    Web-Exploit
                  </span>
                  <span class="px-4 py-2 bg-yellow-500/20 text-yellow-400 rounded-full text-sm font-semibold border border-yellow-500/30 hover:bg-yellow-500/30 transition-colors">
                    Cryptography
                  </span>
                  <span class="px-4 py-2 bg-blue-500/20 text-blue-400 rounded-full text-sm font-semibold border border-blue-500/30 hover:bg-blue-500/30 transition-colors">
                    ArchLinux
                  </span>
                  <span class="px-4 py-2 bg-indigo-500/20 text-indigo-400 rounded-full text-sm font-semibold border border-indigo-500/30 hover:bg-indigo-500/30 transition-colors">
                    PHP
                  </span>
                  <span class="px-4 py-2 bg-pink-500/20 text-pink-400 rounded-full text-sm font-semibold border border-pink-500/30 hover:bg-pink-500/30 transition-colors">
                    OSINT
                  </span>
                  <span class="px-4 py-2 bg-green-500/20 text-pink-400 rounded-full text-sm font-semibold border border-pink-500/30 hover:bg-pink-500/30 transition-colors">
                    Networking
                  </span>
                  <span class="px-4 py-2 bg-purple-500/20 text-pink-400 rounded-full text-sm font-semibold border border-pink-500/30 hover:bg-pink-500/30 transition-colors">
                    Infra
                  </span>
                </div>
              </div>
            </div>
          </div>

        </div>

        <!-- Colonne droite : Logo et réseaux sociaux -->
        <div class="flex flex-col items-center justify-center space-y-8">
          
          <!-- Logo avec effet -->
          <div class="relative group">
            <!-- Cercles décoratifs animés -->
            <div class="absolute inset-0 bg-gradient-to-r from-green-500/20 via-cyan-500/20 to-blue-500/20 rounded-full blur-2xl group-hover:blur-3xl transition-all duration-500 animate-pulse"></div>
            <div class="absolute inset-0 bg-gradient-to-r from-green-500/10 to-cyan-500/10 rounded-full blur-xl animate-spin-slow"></div>
            
            <!-- Logo -->
            <div class="relative">
              <img 
                src="/logobanner.png" 
                alt="Logo j3dus0r" 
                class="h-80 w-80 rounded-full border-4 border-white/10 shadow-2xl group-hover:border-green-500/30 transition-all duration-300 group-hover:scale-105 relative z-10"
              />
            </div>
          </div>

          <!-- Réseaux sociaux -->
          <div class="flex gap-6">
            <a 
              href="https://github.com/wall4cee" 
              target="_blank"
              class="group/social relative"
            >
              <div class="absolute inset-0 bg-gradient-to-r from-purple-500/30 to-pink-500/30 rounded-xl blur-lg opacity-0 group-hover/social:opacity-100 transition-opacity"></div>
              <div class="relative bg-gray-800/50 backdrop-blur-sm border border-white/10 rounded-xl p-4 hover:border-purple-500/50 transition-all duration-300 hover:scale-110 hover:-translate-y-1">
                <img src="/github.png" alt="GitHub" class="h-12 w-12" />
              </div>
            </a>

            <a 
              href="https://linkedin.com/in/enzo-bourgoin-webdev" 
              target="_blank"
              class="group/social relative"
            >
              <div class="absolute inset-0 bg-gradient-to-r from-blue-500/30 to-cyan-500/30 rounded-xl blur-lg opacity-0 group-hover/social:opacity-100 transition-opacity"></div>
              <div class="relative bg-gray-800/50 backdrop-blur-sm border border-white/10 rounded-xl p-4 hover:border-blue-500/50 transition-all duration-300 hover:scale-110 hover:-translate-y-1">
                <img src="/linkedin.svg" alt="LinkedIn" class="h-12 w-12" />
              </div>
            </a>
          </div>

          <!-- CTA optionnel -->
          <a 
            href="/projects"
            class="group/cta relative inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-green-500/10 to-cyan-500/10 border border-green-500/30 rounded-xl hover:border-green-500/60 transition-all duration-300 hover:shadow-xl hover:shadow-green-500/20 hover:-translate-y-1"
          >
            <span class="text-green-400 font-semibold text-lg">Discover my projects</span>
            <svg class="w-5 h-5 text-green-400 group-hover/cta:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>

        </div>

      </div>

    </div>
  </main>
</BaseLayout>

<style>
  @keyframes spin-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .animate-spin-slow {
    animation: spin-slow 20s linear infinite;
  }
</style>