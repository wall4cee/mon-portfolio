---
// Navbar.astro
const currentPath = Astro.url.pathname;
---

<nav class="fixed top-0 left-0 right-0 z-50 backdrop-blur-md bg-black/50 border-b border-white/10">
  <div class="max-w-7xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      
      <!-- Logo / Brand -->
      <a href="/" class="group flex items-center gap-3">
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-r from-green-500/30 to-cyan-500/30 rounded-lg blur-md group-hover:blur-lg transition-all"></div>
          <div class="relative bg-gradient-to-r from-green-500/20 to-cyan-500/20 border border-green-500/30 rounded-lg p-2 group-hover:border-green-500/50 transition-all">
            <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
        </div>
        <span class="text-xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-cyan-500 hidden sm:block">
          j3dus0r
        </span>
      </a>

      <!-- Navigation Links -->
      <div class="flex items-center gap-2">
        <a 
          href="/" 
          class={`group relative px-4 py-2 rounded-lg font-semibold transition-all duration-300 ${
            currentPath === '/' 
              ? 'text-green-400 bg-green-500/10 border border-green-500/30' 
              : 'text-gray-300 hover:text-white hover:bg-white/5'
          }`}
        >
          {currentPath === '/' && (
            <div class="absolute inset-0 bg-gradient-to-r from-green-500/20 to-cyan-500/20 rounded-lg blur-md"></div>
          )}
          <span class="relative flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
            <span class="hidden sm:inline">Home</span>
          </span>
        </a>

        <a 
          href="/projects" 
          class={`group relative px-4 py-2 rounded-lg font-semibold transition-all duration-300 ${
            currentPath === '/projects' 
              ? 'text-cyan-400 bg-cyan-500/10 border border-cyan-500/30' 
              : 'text-gray-300 hover:text-white hover:bg-white/5'
          }`}
        >
          {currentPath === '/projects' && (
            <div class="absolute inset-0 bg-gradient-to-r from-cyan-500/20 to-blue-500/20 rounded-lg blur-md"></div>
          )}
          <span class="relative flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
            </svg>
            <span class="hidden sm:inline">Projects</span>
          </span>
        </a>

        <a 
          href="/writeups" 
          class={`group relative px-4 py-2 rounded-lg font-semibold transition-all duration-300 ${
            currentPath === '/writeups' 
              ? 'text-purple-400 bg-purple-500/10 border border-purple-500/30' 
              : 'text-gray-300 hover:text-white hover:bg-white/5'
          }`}
        >
          {currentPath === '/writeups' && (
            <div class="absolute inset-0 bg-gradient-to-r from-purple-500/20 to-pink-500/20 rounded-lg blur-md"></div>
          )}
          <span class="relative flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <span class="hidden sm:inline">Writeups</span>
          </span>
        </a>

        <a 
          href="/scores" 
          class={`group relative px-4 py-2 rounded-lg font-semibold transition-all duration-300 ${
            currentPath === '/scores' 
              ? 'text-yellow-400 bg-yellow-500/10 border border-yellow-500/30' 
              : 'text-gray-300 hover:text-white hover:bg-white/5'
          }`}
        >
          {currentPath === '/scores' && (
            <div class="absolute inset-0 bg-gradient-to-r from-yellow-500/20 to-orange-500/20 rounded-lg blur-md"></div>
          )}
          <span class="relative flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
            <span class="hidden sm:inline">Scores</span>
          </span>
        </a>
      </div>

    </div>
  </div>
</nav>

<!-- Spacer pour compenser la navbar fixe -->
<div class="h-20"></div>

<style>
  /* Smooth scroll pour toute la page */
  :global(html) {
    scroll-behavior: smooth;
  }
</style>